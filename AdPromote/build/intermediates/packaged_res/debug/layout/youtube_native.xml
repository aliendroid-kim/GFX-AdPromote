<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/promote_native"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    android:visibility="visible">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/body_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FFFFFF"
            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/rel_preview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/video_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/sp_gray"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_alignParentEnd="true"
                    tools:ignore="UseCompoundDrawables,UselessParent">


                    <TextView
                        android:id="@+id/on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/sans_medium"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/watch_on"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:background="@drawable/ic_youtube"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/sans_medium"
                        android:gravity="center"
                        android:lines="1"
                        android:text="Youtube"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7sdp"
                        android:textStyle="normal"
                        android:visibility="visible"
                        />





                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/play_video"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/sp_play_video"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_play" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/native_preview_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B8B8B8"
                    android:visibility="gone"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="Ad"
                            android:textColor="#555555"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText" />

                        <ProgressBar
                            style="?android:attr/progressBarStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminateDrawable="@drawable/sp_progress" />
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toLeftOf="@+id/subscribeLnr"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription" />

                        <RelativeLayout
                            android:id="@+id/native_icon_progress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#D3D3D3"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sans_regular"
                                android:gravity="center"
                                android:text="Ad"
                                android:layout_centerInParent="true"
                                android:textColor="#555555"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal"
                                tools:ignore="HardcodedText" />

                            <ProgressBar
                                style="?android:attr/progressBarStyle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:indeterminateDrawable="@drawable/sp_progress" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sans_regular"
                            android:lines="1"
                            android:text="Watch funny video dogs"
                            android:textColor="#2E2E2E"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables,UselessParent">

                            <TextView
                                android:id="@+id/ad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#2196F3"
                                android:padding="@dimen/_2sdp"
                                android:text="AD"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_7sdp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/views"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/sans_regular"
                                android:gravity="center"
                                android:lines="1"
                                android:text="91,014 views"
                                android:textColor="#515151"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:visibility="visible" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:background="#515151"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp">

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:src="@drawable/ic_like"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/like_counter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:fontFamily="@font/sans_regular"
                                    android:gravity="center"
                                    android:text="5.2K"
                                    android:textColor="#515151"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/subscribeLnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@drawable/ic_add_red"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/subscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sans_medium"
                        android:text="@string/subscribe"
                        android:textAllCaps="false"
                        android:textColor="#e52727"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal"/>



                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/watch_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:gravity="center"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_60sdp"
                android:paddingRight="@dimen/_60sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/watch_video_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_play"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/sans_medium"
                    android:lines="1"
                    android:text="@string/watch_video"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="#2196F3"
                android:padding="@dimen/_3sdp"
                android:text="AD"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</FrameLayout>